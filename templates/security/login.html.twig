{% extends "base.html.twig" %}

{% block body %}
    <section class="page-header">
        <div class="container">
            <h1>LOGIN</h1>

            <!-- breadcrumbs -->
            <ol class="breadcrumb">
                <li class="active">Login</li>
            </ol><!-- /breadcrumbs -->

        </div>
    </section>

    <section>
        <div class="container">

            <div class="row">

                <!-- LEFT TEXT -->
                <div class="col-md-5 offset-md-1">

                    <h2 class="fs-16">IMPORTANT INFORMATION</h2>
                    <p class="text-muted">Maecenas metus nulla, commodo a sodales sed, dignissim pretium nunc. Nam et
                        lacus neque. Ut enim massa, sodales tempor convallis et, iaculis ac massa.</p>
                    <p class="text-muted">Sodales sed, dignissim pretium nunc. Nam et lacus neque. Ut enim massa,
                        sodales tempor convallis et, iaculis ac massa.</p>

                </div>
                <!-- /LEFT TEXT -->


                <!-- LOGIN -->
                <div class="col-md-4">

                    <h2 class="fs-16">LOGIN</h2>

                    <!-- login form -->
                    <form action="{{ path('login') }}" method="post" autocomplete="off">
                        <div class="clearfix">

                            <!-- Email -->
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="username" id="username" name="_username" value="{{ last_username }}" required />
                            </div>

                            <!-- Password -->
                            <div class="form-group">
                                <input type="password" id="password" class="form-control" placeholder="password" name="_password"/>
                            </div>

                        </div>

                        <div class="row">

                            <div class="col-md-6 col-sm-6 col-6">


                            </div>

                            <div class="col-md-6 col-sm-6 col-6 text-right">
                                <button class="btn btn-primary" type="submit">OK, LOG IN</button>
                            </div>

                        </div>

                    </form>
                    <!-- /login form -->

                    <!-- ALERT -->
                    {% if error %}
                        <div class="alert alert-mini alert-danger mb-30">
                            <strong>Oh snap!</strong> {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div><!-- /ALERT -->
                    {% endif %}

                </div>
                <!-- /LOGIN -->

            </div>


        </div>
    </section>
{% endblock %}